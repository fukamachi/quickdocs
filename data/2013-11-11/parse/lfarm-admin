
(:TYPE :SYSTEM :NAME "lfarm-admin" :AUTHOR
 "James M. Lawrence <llmjjmll@gmail.com>" :MAINTAINER NIL :VERSION "0.1.0"
 :LICENCE "BSD" :DESCRIPTION
 "Admin component of lfarm, a library for distributing work across machines."
 :LONG-DESCRIPTION "See http://github.com/lmj/lfarm" :DEPENDS-ON
 ("USOCKET" "LFARM-COMMON") :PACKAGE-LIST
 ((:TYPE :PACKAGE :NAME "LFARM-ADMIN" :FULL-NAME "LFARM-ADMIN" :DOCUMENTATION
   "Administrative duties on a server (ping it or end it)." :SYMBOL-LIST
   ((:TYPE :FUNCTION :SYMBOL
     (:NAME "END-SERVER" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP T) :LAMBDA-LIST
     ((:NAME "HOST" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "PORT" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL))
     :DOCUMENTATION "End the server at host:port.

This only stops new connections from being made. Connections in
progress are unaffected.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "WRITE-PING" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
     :LAMBDA-LIST ((:NAME "STREAM" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T))
     :DOCUMENTATION NIL)
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "READ-PONG" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
     :LAMBDA-LIST ((:NAME "STREAM" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T))
     :DOCUMENTATION NIL)
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "SEND-PING" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
     :LAMBDA-LIST
     ((:NAME "HOST" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "PORT" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "SOCKET" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "STREAM" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T))
     :DOCUMENTATION NIL)
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "RECEIVE-PONG" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
     :LAMBDA-LIST
     ((:NAME "SOCKET" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "TIMEOUT" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL))
     :DOCUMENTATION NIL)
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "PING" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP T) :LAMBDA-LIST
     ((:NAME "HOST" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "PORT" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL)
      (:NAME "&KEY" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
      ((:NAME "TIMEOUT" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP NIL) 3))
     :DOCUMENTATION "Send a ping to the lfarm server at host:port.

Keep trying to make contact for `timeout' seconds, or if `timeout' is
nil then try forever. Default is 3 seconds.

Returns true if successful and nil otherwise."))
   :EXTERNAL-SYMBOLS
   ((:NAME "END-SERVER" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP T)
    (:NAME "PING" :PACKAGE-NAME "LFARM-ADMIN" :EXTERNALP T)))))
