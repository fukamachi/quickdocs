    (:TYPE :FUNCTION :SYMBOL
     (:NAME "PADDING-LENGTH" :PACKAGE-NAME "OSC" :EXTERNALP NIL) :LAMBDA-LIST
     ((:NAME "S" :PACKAGE-NAME "OSC" :EXTERNALP NIL)) :DOCUMENTATION
     "returns the length of padding required for a given length of string")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "PADDED-LENGTH" :PACKAGE-NAME "OSC" :EXTERNALP NIL) :LAMBDA-LIST
     ((:NAME "S" :PACKAGE-NAME "OSC" :EXTERNALP NIL)) :DOCUMENTATION
     "returns the length of an osc-string made from a given length of string")
    (:TYPE :FUNCTION :SYMBOL
