
(:TYPE :SYSTEM :NAME "deoxybyte-systems" :AUTHOR "Keith James" :MAINTAINER NIL
 :VERSION "0.4.1" :LICENCE "New BSD" :DESCRIPTION NIL :LONG-DESCRIPTION NIL
