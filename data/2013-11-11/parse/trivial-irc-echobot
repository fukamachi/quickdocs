
(:TYPE :SYSTEM :NAME "trivial-irc-echobot" :AUTHOR
 "Thomas Stenhaug <thomas.stenhaug@gmail.com>" :MAINTAINER
 "Thomas Stenhaug <thomas.stenhaug@gmail.com>" :VERSION "0.0.3" :LICENCE NIL
 :DESCRIPTION NIL :LONG-DESCRIPTION NIL :DEPENDS-ON ("TRIVIAL-IRC")
 :PACKAGE-LIST
 ((:TYPE :PACKAGE :NAME "TRIVIAL-IRC-ECHOBOT" :FULL-NAME "TRIVIAL-IRC-ECHOBOT"
   :DOCUMENTATION "A trivial echobot.

The echobot will echo all messages sent to it, or to any channel it's
in.

This is meant as a simple example of how to use the `trivial-irc'
library.  To give it a sping, customize the variables in echobot.lisp,
and do something like this:

--
;; (asdf:oos 'asdf:load-op :trivial-irc-echobot)
;; (trivial-echobot:start)
--

Note that you probably don't want to make it join a channel someone
actually uses, as it's quite annoying."
   :SYMBOL-LIST
   ((:TYPE :VARIABLE :SYMBOL
     (:NAME "*CHANNELS*" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :DOCUMENTATION "A list of channels to after registering with server."
     :INITIAL-VALUE "'NIL")
    (:TYPE :VARIABLE :SYMBOL
     (:NAME "*ECHOBOT*" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :DOCUMENTATION "The current `echobot'." :INITIAL-VALUE "NIL")
    (:TYPE :VARIABLE :SYMBOL
     (:NAME "*NICKNAME*" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :DOCUMENTATION "Nickname of the `echobot'." :INITIAL-VALUE "\"mynick\"")
    (:TYPE :VARIABLE :SYMBOL
     (:NAME "*LOG-PATHNAME*" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP
      NIL)
     :DOCUMENTATION NIL :INITIAL-VALUE "NIL")
    (:TYPE :VARIABLE :SYMBOL
     (:NAME "*SERVER*" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :DOCUMENTATION "The server to connect to." :INITIAL-VALUE
     "\"example.com\"")
    (:TYPE :VARIABLE :SYMBOL
     (:NAME "*PORT*" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :DOCUMENTATION "The port to connect to." :INITIAL-VALUE "6667")
    (:TYPE :CLASS :SYMBOL
     (:NAME "ECHOBOT" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :SUPER-CLASS-LIST
     ((:NAME "CLIENT" :PACKAGE-NAME "TRIVIAL-IRC" :EXTERNALP T)) :DOCUMENTATION
     "A simple irc-bot that echoes anything it sees.

Valid initargs are the same as for `trivial-irc:client'."
     :SLOT-LIST NIL)
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "START" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :LAMBDA-LIST (:NAME "NIL" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
     :DOCUMENTATION
     "Set up echobot, bind it to `*echobot*' and enter the `receive-loop'.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "STOP" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :LAMBDA-LIST (:NAME "NIL" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
     :DOCUMENTATION "Stop and `disconnect' the echobot.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "RECEIVE-LOOP" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
     :LAMBDA-LIST (:NAME "NIL" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
     :DOCUMENTATION "Receive messages until interrupted.")
    (:TYPE :METHOD :SYMBOL
     (:NAME "HANDLE" :PACKAGE-NAME "TRIVIAL-IRC" :EXTERNALP T) :LAMBDA-LIST
     (((:NAME "g-command-var100" :PACKAGE-NAME NIL :EXTERNALP NIL)
       ((:NAME "EQL" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
        (:NAME "RPL_WELCOME" :PACKAGE-NAME "KEYWORD" :EXTERNALP T)))
      ((:NAME "ECHOBOT" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T)
       (:NAME "ECHOBOT" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP T))
      (:NAME "PREFIX" :PACKAGE-NAME "TRIVIAL-IRC-ECHOBOT" :EXTERNALP NIL)
