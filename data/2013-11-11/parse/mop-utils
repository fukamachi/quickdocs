
(:TYPE :SYSTEM :NAME "mop-utils" :AUTHOR "Ryszard Szopa" :MAINTAINER NIL
 :VERSION "0.0.1" :LICENCE NIL :DESCRIPTION
 "A set of Metaobject Protocol utilities." :LONG-DESCRIPTION NIL :DEPENDS-ON
 NIL :PACKAGE-LIST
 ((:TYPE :PACKAGE :NAME "MOP-UTILS" :FULL-NAME "MOP-UTILS" :DOCUMENTATION
   "A set of Metaobject Protocol utilities." :SYMBOL-LIST
   ((:TYPE :MACRO :SYMBOL
     (:NAME "DEFMETACLASS" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T) :LAMBDA-LIST
     ((:NAME "METACLASS" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)
      (:NAME "SUPERS" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)
      (:NAME "SLOT-DEFINITIONS" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)
      (:NAME "&BODY" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
      (:NAME "BODY" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL))
     :DOCUMENTATION
     "Macro for easy metaclass definition. It takes all the options
DEFCLASS takes, plus the following:

 - :VALIDATE-SUPERCLASSES, classes for which VALIDATE-SUPERCLASS
   methods (with METACLASS in the subclass position) will be created.

 - :VALIDATE-SUBCLASSES, a list of classes for which
   VALIDATE-SUPERCLASS methods (with METACLASS in the superclass
   position) will be created.

 - :SLOT-FIXTURES, a list of classes from which
   EFFECTIVE-SLOT-DEFINITION and DIRECT-SLOT-DEFINITION should
   inherit. This class should already exist at the time DEFMETACLASS is
   called.

DEFMETACLASS apart from creating the metaclass defines some additional things:

 - The classes <METACLASS>-DIRECT-SLOT-DEFINITION and
   <METACLASS>-EFFECTIVE-SLOT-DEFINITION (where <METACLASS> should be 
   substituted by METACLASS), which inherit from the fixtures and
   STANDARD-CLASS-DIRECT-SLOT-DEFINITION and
   STANDARD-CLASS-EFFECTIVE-SLOT-DEFINITION, respectively.

 - The methods DB-CLASS-{DIRECT|EFFECTIVE}-SLOT-DEFINITION.

")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "CLASS-NAME-OF" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
     :LAMBDA-LIST ((:NAME "OBJECT" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL))
     :DOCUMENTATION "The class-name of the class of OBJECT.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "SLOT-NAMES-OF" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
     :LAMBDA-LIST ((:NAME "OBJECT" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL))
     :DOCUMENTATION "List of names of the slots of OBJECT.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "SLOTS-OF" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T) :LAMBDA-LIST
     ((:NAME "OBJECT" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)) :DOCUMENTATION
     "List of slots of OBJECT.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "GET-SLOT-BY-NAME" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
     :LAMBDA-LIST
     ((:NAME "CLASS" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
      (:NAME "NAME" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL))
     :DOCUMENTATION "Get slot whose name is `NAME' from `CLASS'.")
    (:TYPE :FUNCTION :SYMBOL
     (:NAME "GET-SLOT-OF-BY-NAME" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
     :LAMBDA-LIST
     ((:NAME "OBJECT" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)
      (:NAME "NAME" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL))
     :DOCUMENTATION "Get slot whose name is `NAME' of the class of `OBJECT'.")
    (:TYPE :MACRO :SYMBOL
     (:NAME "DO-CHILDREN" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T) :LAMBDA-LIST
     (((:NAME "VAR" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)
       (:NAME "CLASS-NAME" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T))
      (:NAME "&BODY" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
      (:NAME "BODY" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL))
     :DOCUMENTATION
     "For every subclass of class named by CLASS-NAME, execute BODY with VAR bind to it.")
    (:TYPE :MACRO :SYMBOL
     (:NAME "DO-MACRO-FOR-CHILDREN" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
     :LAMBDA-LIST
     ((:NAME "MACRO" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP NIL)
      (:NAME "CLASS-NAME" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T))
     :DOCUMENTATION
     "Use MACRO with the names of all the subclasses of the class named
by CLASS-NAME."))
   :EXTERNAL-SYMBOLS
   ((:NAME "DO-CHILDREN" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "SLOTS-OF" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "CLASS-NAME-OF" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "GET-SLOT-BY-NAME" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "DEFMETACLASS" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "DO-MACRO-FOR-CHILDREN" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "GET-SLOT-OF-BY-NAME" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)
    (:NAME "SLOT-NAMES-OF" :PACKAGE-NAME "MOP-UTILS" :EXTERNALP T)))))
