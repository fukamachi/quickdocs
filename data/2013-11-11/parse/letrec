
(:TYPE :SYSTEM :NAME "letrec" :AUTHOR "Robert Smith <quad@symbo1ics.com>"
 :MAINTAINER NIL :VERSION NIL :LICENCE "Public Domain. See LICENSE."
 :DESCRIPTION "A simple alternative to Scheme's LETREC." :LONG-DESCRIPTION NIL
 :DEPENDS-ON ("ALEXANDRIA") :PACKAGE-LIST
 ((:TYPE :PACKAGE :NAME "LETREC" :FULL-NAME "LETREC" :DOCUMENTATION NIL
   :SYMBOL-LIST
   ((:TYPE :FUNCTION :SYMBOL
     (:NAME "CHECK-DEFINITIONS" :PACKAGE-NAME "LETREC" :EXTERNALP NIL)
     :LAMBDA-LIST ((:NAME "DEFINITIONS" :PACKAGE-NAME "LETREC" :EXTERNALP NIL))
     :DOCUMENTATION NIL)
    (:TYPE :MACRO :SYMBOL (:NAME "LETREC" :PACKAGE-NAME "LETREC" :EXTERNALP T)
     :LAMBDA-LIST
     (((:NAME "&REST" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
       (:NAME "DEFINITIONS" :PACKAGE-NAME "LETREC" :EXTERNALP NIL))
      (:NAME "&BODY" :PACKAGE-NAME "COMMON-LISP" :EXTERNALP T)
      (:NAME "BODY" :PACKAGE-NAME "LETREC" :EXTERNALP NIL))
     :DOCUMENTATION
     "A macro imitation of Scheme's LETREC. Bindings should be of the form

   (NAME FUNCTION-FORM)

where NAME is a symbol and FUNCTION-FORM is any function-producing form."))
   :EXTERNAL-SYMBOLS ((:NAME "LETREC" :PACKAGE-NAME "LETREC" :EXTERNALP T)))))
